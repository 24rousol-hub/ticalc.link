  "devDependencies": {
    "node-sass": "^4.14.1",
    "ticalc-usb": "^1.0.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
